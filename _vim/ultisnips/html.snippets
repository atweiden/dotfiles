snippet jquery "jQuery CDN" b!
<script src="http://code.jquery.com/jquery.min.js"></script>
endsnippet

snippet jquery "jQuery" b!
<script src="js/jquery.js"></script>
endsnippet

snippet underscore "Underscore CDN" b!
<script src="http://underscorejs.org/underscore-min.js"></script>
endsnippet

snippet underscore "Underscore" b!
<script src="js/underscore.js"></script>
endsnippet

snippet backbone "Backbone CDN" b!
<script src="http://backbonejs.org/backbone-min.js"></script>
endsnippet

snippet backbone "Backbone" b!
<script src="js/backbone.js"></script>
endsnippet

snippet highcharts "Highcharts CDN" b!
<script src="http://code.highcharts.com/highcharts.js"></script>
endsnippet

snippet highcharts "highcharts" b!
<script src="js/highcharts.js"></script>
endsnippet
