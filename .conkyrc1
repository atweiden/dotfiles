background yes
use_xft yes
xftfont Monaco:size=9
xftalpha 1
update_interval 1.0
total_run_times 0
own_window yes
own_window_transparent yes
own_window_type desktop
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_colour black
double_buffer yes
minimum_size 1 1
maximum_width 240
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
default_color gray
default_shade_color 000000
default_outline_color d9d7d6
alignment tl
gap_x 12
gap_y 12
no_buffers yes
uppercase no
cpu_avg_samples 2
override_utf8_locale no
color1 red
color2 gray
##############################################
#  Output
##############################################
TEXT
${font Muli:bold:size=8}CPU: ${font Muli:normal:size=8}${cpubar cpu0}
${font Muli:bold:size=8}RAM: ${font Muli:normal:size=8}$membar

${font Muli:bold:size=8}SYSTEM ${hr 2}
${font Muli:normal:size=8}$sysname $kernel $alignr $machine
Host:$alignr$nodename
Uptime:$alignr$uptime

${font Muli:bold:size=8}TOP PROCESSES ${hr 2}
${font Muli:normal:size=8}${top_mem name 1}${alignr}${top mem 1} %
${font Muli:normal:size=8}${top_mem name 2}${alignr}${top mem 2} %
${font Muli:normal:size=8}${top_mem name 3}${alignr}${top mem 3} %
${font Muli:normal:size=8}${top_mem name 4}${alignr}${top mem 4} %

${font Muli:bold:size=8}SHORTCUT KEYS ${hr 2}
${font Monaco:normal:size=8}Super+a${font Muli:normal:size=8}$alignr Toggle Maximize
${font Monaco:normal:size=8}Super+h${font Muli:normal:size=8}$alignr Toggle Horizontal
${font Monaco:normal:size=8}Super+v${font Muli:normal:size=8}$alignr Toggle Vertical
${font Monaco:normal:size=8}Super+c${font Muli:normal:size=8}$alignr Move to Center
${font Monaco:normal:size=8}Super+Arrow${font Muli:normal:size=8}$alignr Move
${font Monaco:normal:size=8}Alt+Super+Arrow${font Muli:normal:size=8}$alignr Resize
${font Monaco:normal:size=8}Super+x${font Muli:normal:size=8}$alignr Classic Keybinds
